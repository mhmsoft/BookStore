                        <div class="panel panel-default">
                            <div class="panel-heading" role="tab" id="headingFive">
                                <h4 class="panel-title">
                                    <a class="collapsed" role="button" data-toggle="collapse" data-parent="#accordion" href="#collapseFive" aria-expanded="false" aria-controls="collapseFive">
                                        <span>4</span>
                                        Sipariş Özeti
                                    </a>
                                </h4>
                            </div>
                            <div id="collapseFive" class="panel-collapse collapse" role="tabpanel" aria-labelledby="headingFive">
                                <div class="panel-body no-padding">
                                    <div class="order-review" id="checkout-review">
                                        @if (Session["card"] != null)
                                        {
                                            List<BasketItem> cardx = (List<BasketItem>)Session["card"];
                                            var total = cardx.Sum(item => item.product.fiyat * item.quantity);
                                            <div class="table-responsive" id="checkout-review-table-wrapper">
                                                <table class="data-table" id="checkout-review-table">
                                                    <thead>
                                                        <tr>
                                                            <th rowspan="1">Ürün Ad</th>
                                                            <th colspan="1">Fiyat</th>
                                                            <th rowspan="1">Adet</th>
                                                            <th colspan="1">Tutar</th>
                                                        </tr>
                                                    </thead>
                                                    <tbody>
                                                        @foreach (var item in cardx)
                                                        {
                                                            <tr>
                                                                <td><h3 class="product-name">@item.product.urunAdi</h3></td>
                                                                <td><span class="cart-price"><span class="check-price">₺ @item.product.fiyat</span></span></td>
                                                                <td>@item.quantity</td>
                                                                <!-- sub total starts here -->

                                                                <td><span class="cart-price"><span class="check-price">₺ @(item.product.fiyat * item.quantity)</span></span></td>
                                                            </tr>
                                                        }


                                                    </tbody>
                                                    <tfoot>
                                                        <tr>
                                                            <td colspan="3">Alt Tutar</td>
                                                            <td><span class="check-price">₺ @total</span></td>
                                                        </tr>
                                                        @{var teslimat = 5;
                                                        }
                                                        <tr>
                                                            <td colspan="3">Gönderim Tutar</td>
                                                            <td><span class="check-price">$@teslimat</span></td>
                                                        </tr>
                                                        @{var indirim = 0;
                                                        }
                                                        <tr>
                                                            <td colspan="3">İndirim</td>
                                                            <td><span class="check-price">$@indirim</span></td>
                                                        </tr>
                                                        <tr>
                                                            <td colspan="3"><strong>Toplam Tutar</strong></td>
                                                            <td><strong><span class="check-price">₺ @(total - indirim + teslimat)</span></strong></td>
                                                        </tr>
                                                    </tfoot>
                                                </table>
                                            </div>
                                        }

                                        <div id="checkout-review-submit">
                                            <div class="cart-btn-3" id="review-buttons-container">

                                                <input type="submit" title="Place Order" value="Öde" class="btn btn-default" />
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
            <div class="col-md-offset-1 col-md-3">
                <div class="checkout-widget">
                    <h2 class="widget-title">YOUR CHECKOUT PROGRESS</h2>
                    <ul>
                        <li><a href="#"><i class="fa fa-minus"></i> Billing Address</a></li>
